{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "pwa-chrome",
			"request": "launch",
			"name": "Chrome",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}",
			"runtimeArgs": [
				"--load-extension=${env:userprofile}/AppData/Local/Google/Chrome/User Data/Profile 2/Extensions/nkbihfbeogaeaoehlefnkodbefgpgknn/10.8.1_0"
			]
		},
		{
			"name": "Compile",
			"type": "pwa-node",
			"request": "launch",
			"skipFiles": ["<node_internals>/**"],
			"program": "${workspaceFolder}\\src\\ethereum\\compile.js"
		},
		{
			"name": "Mocha Tests",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}\\src\\ethereum",
			"runtimeExecutable": "mocha"
		},
		{
			"name": "Deploy",
			"program": "${workspaceFolder}\\src\\ethereum\\deploy.js",
			"request": "launch",
			"skipFiles": ["<node_internals>/**"],
			"type": "pwa-node"
		}
	]
}
